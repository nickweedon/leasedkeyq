{
  "name": "leasedkeyq Development",
  "dockerComposeFile": ["../docker-compose.devcontainer.yml"],
  "service": "leasedkeyq-vscode",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "charliermarsh.ruff",
        "anthropic.claude-code"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspace/.venv/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["tests"],
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "ruff.lint.args": ["--config=/workspace/pyproject.toml"],
        "ruff.format.args": ["--config=/workspace/pyproject.toml"]
      }
    }
  },

  "postCreateCommand": "uv sync --all-extras",
  "postStartCommand": "sudo groupmod -g $(stat -c '%g' /var/run/docker.sock) docker 2>/dev/null || true; sudo usermod -aG docker vscode 2>/dev/null || true",

  "features": {},

  "forwardPorts": [],

  "shutdownAction": "stopCompose"
}
